  "devDependencies": {
    "@types/lodash.reduce": "^4.6.7",
    "@types/lodash.setwith": "^4.3.7",
    "@types/node": "^17.0.41",
    "lodash.reduce": "^4.6.0",
    "lodash.setwith": "^4.3.2",
    "style-dictionary": "^3.7.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
